# Environment variables for the negotiation service

# Application
DEBUG=false
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# WebRTC Configuration
STUN_SERVERS=stun:stun.l.google.com:19302
# TURN_SERVERS=turn:your-turn-server.com:3478

# AI Provider Configuration
# Gemini/Google AI
# GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-pro
GEMINI_VEO_MODEL=gemini-veo3
GEMINI_PROJECT_ID=your_project_id

# OpenAI/ChatGPT
# OPENAI_API_KEY=your_openai_api_key_here
# Use OpenAI's 4o as a widely available default; override to newer if available
OPENAI_MODEL=gpt-4o
OPENAI_ORG_ID=your_org_id_optional

# Anthropic/Claude
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Use Anthropic's latest Sonnet alias; override to a specific pinned version if desired
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
ANTHROPIC_MAX_TOKENS=4096

# xAI/Grok
# GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-beta
GROK_BASE_URL=https://api.x.ai/v1

# STT/TTS Configuration
WHISPER_MODEL_SIZE=base
WHISPER_DEVICE=cpu
XTTS_MODEL_PATH=models/xtts
XTTS_DEVICE=cpu

# Audio Quality Settings
# Use 44100 for high-quality TTS providers like ElevenLabs
# Use 16000 for faster local providers like XTTS
AUDIO_SAMPLE_RATE=44100

# ElevenLabs TTS (Optional - provides high-quality voice synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_monolingual_v1

# Content Safety
CONTENT_SAFETY_ENABLED=true
CONTENT_SAFETY_PROVIDER=rule_based

# Session Management
SESSION_TIMEOUT_MINUTES=60
MAX_CONCURRENT_SESSIONS=100

# Avatar/Video Configuration
AVATAR_STYLE=diplomatic
VOICE_ID=default
LATENCY_TARGET_MS=500

# SadTalker Portrait Animation (Apple Silicon Optimized)
SADTALKER_DIR=~/Projects/SadTalker
PORTRAIT_PATH=assets/avatars/british_general_frame.jpg
SADTALKER_DEVICE=mps  # mps for Apple Silicon, cpu for others
SADTALKER_ENHANCE=true  # Use GFPGAN enhancement
SADTALKER_STILL_MODE=false  # Minimal head movement for formal speeches
SADTALKER_ENABLED=false  # Disabled by default (too slow: ~20 minutes per video)

# Wav2Lip Configuration (DEPRECATED - Use D-ID instead)
WAV2LIP_ENABLED=false
WAV2LIP_DIR=~/Projects/Wav2Lip

# D-ID Talking Avatar (Cloud Service - RECOMMENDED)
DID_ENABLED=true
DID_API_KEY=  # Get free trial at https://studio.d-id.com/account-settings
PUBLIC_BASE_URL=http://localhost:8000  # Public URL for serving audio/images to D-ID
